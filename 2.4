 const Course = (props) => {
    const {course} = props
    return (
      <h1>{course.name}</h1>
    )
}

const Parts = (props) => {
  const {course} = props
  return (
    <div>
      {course.parts.map((part) => {
        return (
          <p key={part.id}>
            {part.name} : {part.exercises}
          </p>
        )
      })}
    </div>
  )
}

const Total = (props) => {
  const {course} = props
  const total = course.parts.reduce((acc, part) => acc + part.exercises, 0)
  return (
    <p>total of {total} excrcises</p>
  )
}




